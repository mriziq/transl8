{
  "name": "@transl8r/transl8r-client",
  "version": "1.0.0",
  "description": "Simple client library for Transl8r AI Translation API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "ai",
    "typescript",
    "transl8r",
    "api-client"
  ],
  "author": "Transl8r Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/transl8r/client-js.git"
  },
  "bugs": {
    "url": "https://github.com/transl8r/client-js/issues"
  },
  "homepage": "https://github.com/transl8r/client-js#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.5.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "optionalDependencies": {
    "node-fetch": "^3.3.2"
  }
}
